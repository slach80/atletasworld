# Django
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL:
# DATABASE_URL=postgres://user:password@localhost:5432/atletasworld

# Stripe
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production:
# EMAIL_BACKEND=anymail.backends.sendgrid.EmailBackend
# SENDGRID_API_KEY=xxx

# CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# NOTIFICATION SERVICES - Feature Flags
# All paid services are DISABLED by default. Enable as needed.
# =============================================================================

# SMS via Twilio (PAID SERVICE - ~$0.0075 per SMS)
# Set to True to enable SMS notifications
SMS_ENABLED=False
TWILIO_ACCOUNT_SID=ACxxx
TWILIO_AUTH_TOKEN=xxx
TWILIO_PHONE_NUMBER=+1234567890

# Web Push Notifications (FREE - uses VAPID keys)
# Generate keys with: npx web-push generate-vapid-keys
PUSH_NOTIFICATIONS_ENABLED=False
VAPID_PUBLIC_KEY=xxx
VAPID_PRIVATE_KEY=xxx

# Production Email Service (PAID in production)
# Uses console backend when False (prints to terminal)
PRODUCTION_EMAIL_ENABLED=False

# Celery Background Tasks (requires Redis)
# Redis is FREE locally, but paid in cloud (Heroku Redis, AWS ElastiCache, etc.)
CELERY_ENABLED=False
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=django-db

# =============================================================================
# General Settings
# =============================================================================
SITE_URL=http://localhost:8000
DEFAULT_FROM_EMAIL=noreply@atletasworld.com
